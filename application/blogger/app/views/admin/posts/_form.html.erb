<% url = action_name == 'edit' ? admin_post_path(@post) : admin_posts_path(@post)%>
<%= semantic_form_for @post, :url => url, html: { id: :posts_form } do |f| %>
    <div class="form-group">
    <%= f.inputs do %>
        <%= f.input :category, input_html: { class: 'form-control' } %>
        <%= f.input :title, input_html: { class: 'form-control', id: "titlePost"} %>
        <%= f.input :content, input_html: { class: 'form-control tinymce', id: 'contentPost' } %>
        <%= f.input :id, as: :hidden%>
    <%end%>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, button_html: { class: 'btn btn-primary' }%>
      <%= f.action :cancel, :as => :link %>
    <% end %>
    </div>
  <% end %>