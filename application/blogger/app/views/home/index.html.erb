<%unless @post.nil?%>
<div class="row" style="padding: 10px 20px">
  <div class="col-lg-2">
    <p style="padding-top:40px">
          By <a href="#"><%= @post.try(:user).try(:email)%></a>
        </p>
        <!-- Date/Time -->
        <p class="">
          <i class="fa fa-calendar"></i> 
          Posted on <%= @post.created_at.strftime("%B %d at %I:%M %p")%>
        </p>
  </div>
  <div class="col-lg-10">
      <h1 class="page-header">
        <%=@post.title%>
        </h1>

      <p><%=raw @post.content%></p>
        <!-- /.table-responsive -->
  </div>
</div>
<% end %>
